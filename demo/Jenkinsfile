pipeline {
    agent {
        docker {
            image 'my-jenkins-agent-image'
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }
    stages {
        stage('Build') {
            steps {
                script {
                    // Build Docker image
                    sh 'docker build -t my-spring-boot-app:2 .'
                }
            }
        }
    }
}
